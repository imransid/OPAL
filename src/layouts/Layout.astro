---
import ToastContainer from '../components/ui/ToastContainer';
import { SEO, fullUrl } from '../lib/seo';

export interface Props {
	title: string;
	description?: string;
	image?: string;
	imageAlt?: string;
	noindex?: boolean;
	/** Override canonical URL (e.g. for product pages with ?id=) */
	canonical?: string;
	/** JSON-LD to inject (optional, in addition to Organization) */
	structuredData?: object;
}

const { title, description, image, imageAlt, noindex = false, canonical: canonicalOverride, structuredData } = Astro.props;
const site = Astro.site?.href || 'https://opal.example.com';
const canonical = canonicalOverride || fullUrl(Astro.url.pathname, site);
const desc = description || SEO.defaultDescription;
const img = image ? (image.startsWith('http') ? image : fullUrl(image, site)) : fullUrl(SEO.defaultImage, site);
const imgAlt = imageAlt || SEO.defaultImageAlt;

// Organization JSON-LD (global)
const orgJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Organization',
	name: SEO.siteName,
	url: site,
	description: SEO.defaultDescription,
	logo: fullUrl('/favicon.svg', site),
};
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
		<link
			href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|Noto+Sans:300,400,500,600,700,800|PT+Mono:300,400,500,600,700"
			rel="stylesheet"
		/>
		<meta name="generator" content={Astro.generator} />

		<!-- Primary meta -->
		<title>{title}</title>
		<meta name="description" content={desc} />
		<meta name="theme-color" content="#1a1a1f" />
		<link rel="canonical" href={canonical} />

		<!-- Robots -->
		{noindex ? (
			<meta name="robots" content="noindex, nofollow" />
		) : (
			<meta name="robots" content="index, follow" />
		)}

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={desc} />
		<meta property="og:url" content={canonical} />
		<meta property="og:image" content={img} />
		<meta property="og:image:alt" content={imgAlt} />
		<meta property="og:site_name" content={SEO.siteName} />
		<meta property="og:locale" content={SEO.locale} />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={desc} />
		<meta name="twitter:image" content={img} />
		<meta name="twitter:image:alt" content={imgAlt} />
		{SEO.twitterHandle && <meta name="twitter:site" content={SEO.twitterHandle} />}

		<!-- Sitemap discovery -->
		<link rel="sitemap" href="/sitemap-index.xml" type="application/xml" />

		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

		<!-- JSON-LD structured data -->
		<script type="application/ld+json" set:html={JSON.stringify(orgJsonLd)} />
		{structuredData && <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />}
	</head>
	<body>
		<slot />
		<ToastContainer client:load />
	</body>

  <!-- Bootstrap JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  <!-- Product JavaScript -->
  <script>
    import "/assets/js/astro-ecommerce.js"
  </script>
</html>
<style is:global>
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
